{
"hyprland/workspaces": {
        "format": "{icon}",
        "format-active": " {icon} ",
        "on-click": "activate"
    },
    
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß", 
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî",
        "format-muted": "Ôö©",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
    },
    
    "tray": {
        "icon-size": 16,
        "spacing": 8
    },
    
    "custom/island": {
        "exec": "$HOME/.config/waybar/scripts/weather.sh",
        "interval": 600,
        "format": "{}",
        "return-type": "json",
        "tooltip": true,
        "on-click": "$HOME/.config/waybar/scripts/select_city.sh"
    },
    
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    
    "custom/system_stats": {
        "exec": "$HOME/.config/waybar/scripts/system_stats.sh",
        "interval": 5,
        "return-type": "json",
        "format": "{}",
        "tooltip": true,
        "on-click": "$HOME/.config/waybar/scripts/cycle_system_stats.sh",
        "on-scroll-up": "$HOME/.config/waybar/scripts/cycle_system_stats.sh power",
        "on-scroll-down": "$HOME/.config/waybar/scripts/cycle_system_stats.sh power"
    },

    "custom/power": {
        "format": "‚èª ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml",
        "menu-actions": {
            "shutdown": "poweroff",
            "reboot": "reboot", 
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },
    
    "custom/ss": {
        "format": "{}",
        "exec": "~/.config/waybar/scripts/tools/expand ss-icon",
        "on-click": "~/.config/waybar/scripts/screenshot_full"
    },
    
    "custom/cycle_wall": {
        "format": "{}",
        "exec": "~/.config/waybar/scripts/tools/expand wall",
        "on-click": "~/.config/waybar/scripts/tools/expand cycle"
    },
    
    "custom/expand": {
        "on-click": "~/.config/waybar/scripts/expand_toolbar",
        "format": "{}",
        "exec": "~/.config/waybar/scripts/tools/expand arrow-icon"
    },
    
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },

    "custom/temperature": {
        "exec": "$HOME/.config/waybar/scripts/temperature.sh",
        "interval": 5,
        "return-type": "json",
        "format": "{}",
        "tooltip": true,
        "on-click": "$HOME/.config/waybar/scripts/cycle_temperature.sh"
    },
    
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "interval": 60,
        "format": "{:%H:%M}",
        "max-length": 25
    },
    
    "memory": {
        "format": "{}% ÔÉâ"
    },
    
    "battery": {
        "states": {
            "warning": 50,
            "critical": 20
        },
        "format": "{icon}",
        "format-charging": "",
        "format-plugged": "",
        "format-icons": ["Ôïπ", "Ôïª", "ÔïΩ", "Ôïø", "Ôï∏"]
    },
    
    "battery#bat2": {
        "bat": "BAT2"
    },
    
    "network": {
        "format-wifi": "Ôá´ {signal}%",
        "format-ethernet": "Ôõø",
        "tooltip-format": "via {gwaddr} {ifname}Ôûñ",
        "format-linked": "",
        "format-disconnected": "‚ö†Ô∏è Êó†ËøûÊé•",
        "format-alt": "   "
    },
    
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null"
    },

    "custom/network": {
        "exec": "$HOME/.config/waybar/scripts/network.sh",
        "interval": 5,
        "return-type": "json",
        "on-click": "$HOME/.config/waybar/scripts/network_menu_dynamic.sh",
        "tooltip": true
    }
}
